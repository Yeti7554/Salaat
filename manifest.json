{
  "manifest_version": 3,
  "name": "Salaat - Prayer Times",
  "version": "0.5",
  "description": "A simple app that displays daily prayer times for a selected your city and country.",
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
 
  "action": {
    "default_icon": {
      "16": "16.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
      },
    "default_popup": "index.html"
  },
  "host_permissions": [
    "https://geocode.xyz/*",
    "https://api.aladhan.com/v1/timingsByCity"
  ],
  "permissions": [
    "geolocation"
  ]
}
